{
  "name": "@jazzapedia/web",
  "type": "module",
  "version": "1.0.0",
  "description": "A personal wiki for 4000+ musician profiles with semantic search",
  "scripts": {
    "type-check": "astro check",
    "clean": "rm -rf dist .astro",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "wrangler dev",
    "deploy": "astro build && wrangler pages deploy dist --project-name jazzapedia",
    "astro": "astro",
    "sync": "./scripts/sync-content.sh && ./scripts/sync-wwoz.sh",
    "insights": "npx tsx scripts/compute-wwoz-insights.ts",
    "build:prod": "npm run sync && npm run insights && npm run build && npm run postbuild",
    "postbuild": "npx pagefind --site dist",
    "sync:local": "npx tsx scripts/sync-to-d1.ts --local",
    "sync:remote": "npx tsx scripts/sync-to-d1.ts --remote",
    "sync:dry-run": "npx tsx scripts/sync-to-d1.ts --remote --dry-run",
    "sync:incr": "npx tsx scripts/sync-incremental.ts --local",
    "sync:incr:remote": "npx tsx scripts/sync-incremental.ts --remote",
    "sync:incr:dry-run": "npx tsx scripts/sync-incremental.ts --local --dry-run",
    "upload:portraits": "npx tsx scripts/upload-portraits-r2.ts",
    "db:migrate": "wrangler d1 execute jazzapedia --remote --file=migrations/0001_initial.sql",
    "db:migrate:local": "wrangler d1 execute jazzapedia --local --file=migrations/0001_initial.sql",
    "sync:content-deploy": "./scripts/sync-content-deploy.sh",
    "sync:sqlite": "npx tsx scripts/sync-to-sqlite.ts --output ../../data/jazzapedia.db",
    "sync:sqlite:dry-run": "npx tsx scripts/sync-to-sqlite.ts --output ../../data/jazzapedia.db --dry-run",
    "sync:incr:sqlite": "npx tsx scripts/sync-incremental-sqlite.ts --output ../../data/jazzapedia.db",
    "sync:incr:sqlite:dry-run": "npx tsx scripts/sync-incremental-sqlite.ts --output ../../data/jazzapedia.db --dry-run",
    "sync:all": "./scripts/unified-daily-sync.sh",
    "sync:verify": "./scripts/verify-sync.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/node": "^9.0.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/playfair-display": "^5.2.8",
    "@jazzapedia/db": "workspace:*",
    "@jazzapedia/types": "workspace:*",
    "@jazzapedia/utils": "workspace:*",
    "astro": "^5.16.6",
    "better-sqlite3": "^11.0.0",
    "d3": "^7.9.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "remark-wiki-link": "^2.0.1",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@cloudflare/workers-types": "^4.20260109.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^25.0.3",
    "tsx": "^4.20.6",
    "wrangler": "^4.58.0"
  }
}
